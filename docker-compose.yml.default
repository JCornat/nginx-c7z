version: '3'
services:
    server:
        restart:
        image: nginx:
        external_links:
            - ':'
        ports:
            - '80:80'
            - '443:443'
        volumes:
            - './conf:/etc/nginx/conf.d/'
            - './nginx.conf:/etc/nginx/nginx.conf'
            - './ssl:/etc/nginx/ssl/'
            - '/etc/localtime:/etc/localtime:ro'
networks:
    default:
        external:
            name: main
